<Window x:Class="Amortization.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Amortization.App.ViewModels"
        Title="Amortization Calculator"
        Width="1100" Height="700"
        MinWidth="900" MinHeight="500">
    <Window.DataContext>
        <vm:MainViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" MinWidth="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Inputs -->
        <StackPanel Grid.Column="0" Margin="0,0,16,0">
            <TextBlock Text="Loan details" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Principal" VerticalAlignment="Center" Margin="0,0,8,6"/>
                <TextBox Grid.Column="1" Text="{Binding PrincipalText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="4,2"/>
                <TextBlock Grid.Row="1" Text="Rate (%)" VerticalAlignment="Center" Margin="0,0,8,6"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RateText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="4,2"/>
                <TextBlock Grid.Row="2" Text="Term (years)" VerticalAlignment="Center" Margin="0,0,8,6"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TermYearsText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="4,2"/>
                <TextBlock Grid.Row="3" Text="First payment date" VerticalAlignment="Center" Margin="0,0,8,6"/>
                <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="0,0,0,6" Padding="2"/>
            </Grid>

            <TextBlock Text="Extra payments" FontWeight="SemiBold" FontSize="14" Margin="0,16,0,8"/>
            <TextBlock Text="Recurring extra principal (per month)" Margin="0,0,0,4"/>
            <TextBox Text="{Binding RecurringExtraText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" Padding="4,2"/>

            <TextBlock Text="Lump sums (date + amount)" Margin="0,0,0,4"/>
            <DataGrid x:Name="LumpSumsGrid" ItemsSource="{Binding LumpSums}" SelectedIndex="{Binding SelectedLumpSumIndex, Mode=TwoWay}"
                      AutoGenerateColumns="False" Height="120" Margin="0,0,0,6"
                      CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Date" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" Padding="2,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Amount" Binding="{Binding AmountText, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <Button Content="Add lump sum" Command="{Binding AddLumpSumCommand}" Padding="8,4" Margin="0,0,8,0"/>
                <Button Content="Remove selected" Command="{Binding RemoveSelectedLumpSumCommand}" Padding="8,4"/>
            </StackPanel>

            <Button Content="Calculate" Command="{Binding CalculateCommand}" Padding="12,6" FontSize="14" HorizontalAlignment="Stretch"/>
        </StackPanel>

        <!-- Right: Summary + Schedule -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,12,0" MinWidth="160">
                    <StackPanel>
                        <TextBlock Text="Base schedule" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock><Run Text="Payment: "/><Run Text="{Binding BaseSummary.MonthlyPayment, StringFormat='{}{0:C2}'}"/></TextBlock>
                        <TextBlock><Run Text="Total interest: "/><Run Text="{Binding BaseSummary.TotalInterest, StringFormat='{}{0:C2}'}"/></TextBlock>
                        <TextBlock><Run Text="Payoff: "/><Run Text="{Binding BaseSummary.PayoffDate, StringFormat='yyyy-MM-dd'}"/></TextBlock>
                    </StackPanel>
                </Border>
                <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,12,0" MinWidth="160">
                    <StackPanel>
                        <TextBlock Text="With extras" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock><Run Text="Payment: "/><Run Text="{Binding ExtraSummary.MonthlyPayment, StringFormat='{}{0:C2}'}"/></TextBlock>
                        <TextBlock><Run Text="Total interest: "/><Run Text="{Binding ExtraSummary.TotalInterest, StringFormat='{}{0:C2}'}"/></TextBlock>
                        <TextBlock><Run Text="Payoff: "/><Run Text="{Binding ExtraSummary.PayoffDate, StringFormat='yyyy-MM-dd'}"/></TextBlock>
                    </StackPanel>
                </Border>
                <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="4" Padding="12" MinWidth="140">
                    <StackPanel>
                        <TextBlock Text="Savings" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock><Run Text="Interest saved: "/><Run Text="{Binding InterestSaved, Mode=OneWay, StringFormat='{}{0:C2}'}"/></TextBlock>
                        <TextBlock><Run Text="Payments saved: "/><Run Text="{Binding PaymentsSaved, Mode=OneWay}"/></TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                <RadioButton Content="Base schedule" IsChecked="{Binding SelectedScenario, Converter={StaticResource ScenarioConverter}, ConverterParameter=Base, Mode=TwoWay}" GroupName="Scenario" Margin="0,0,16,0"/>
                <RadioButton Content="With extras" IsChecked="{Binding SelectedScenario, Converter={StaticResource ScenarioConverter}, ConverterParameter=WithExtras, Mode=TwoWay}" GroupName="Scenario" Margin="0,0,16,0"/>
                <Button Content="Export CSV..." Command="{Binding ExportCsvCommand}" Padding="8,4" VerticalAlignment="Center"/>
            </StackPanel>

            <DataGrid Grid.Row="2" ItemsSource="{Binding ScheduleRows}" AutoGenerateColumns="False"
                      IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                      AlternatingRowBackground="#f8f8f8" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding PaymentNumber}" Width="40"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat='yyyy-MM-dd'}" Width="90"/>
                    <DataGridTextColumn Header="Payment" Binding="{Binding ScheduledPayment, StringFormat='F2'}" Width="80"/>
                    <DataGridTextColumn Header="Interest" Binding="{Binding Interest, StringFormat='F2'}" Width="80"/>
                    <DataGridTextColumn Header="Principal" Binding="{Binding ScheduledPrincipal, StringFormat='F2'}" Width="80"/>
                    <DataGridTextColumn Header="Extra" Binding="{Binding ExtraPrincipal, StringFormat='F2'}" Width="70"/>
                    <DataGridTextColumn Header="Total Prin." Binding="{Binding TotalPrincipal, StringFormat='F2'}" Width="80"/>
                    <DataGridTextColumn Header="Balance" Binding="{Binding EndingBalance, StringFormat='F2'}" Width="90"/>
                    <DataGridTextColumn Header="Cum. Interest" Binding="{Binding CumulativeInterest, StringFormat='F2'}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
