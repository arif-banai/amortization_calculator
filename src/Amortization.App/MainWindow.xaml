<ui:FluentWindow x:Class="Amortization.App.MainWindow"
        x:Name="ThisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Amortization.App.ViewModels"
        Title="Amortization Calculator"
        Width="1100" Height="700"
        MinWidth="900" MinHeight="500"
        ExtendsContentIntoTitleBar="True">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:TitleBar Grid.Row="0" Title="Amortization Calculator"/>
        <Border Grid.Row="1" TextElement.FontSize="{DynamicResource AppFontSize}">
            <Border.LayoutTransform>
                <ScaleTransform ScaleX="{Binding Settings.EffectiveZoom, ElementName=ThisWindow}"
                               ScaleY="{Binding Settings.EffectiveZoom, ElementName=ThisWindow}"/>
            </Border.LayoutTransform>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360" MinWidth="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Inputs (scrollable) -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,16,0">
                    <StackPanel>
                        <!-- Loan Details card -->
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="6" Padding="14" Margin="0,0,0,16" Background="#fafafa">
                            <StackPanel>
                                <TextBlock Text="Loan details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Principal ($)" VerticalAlignment="Center" Margin="0,0,8,6"/>
                                    <TextBox Grid.Column="1" Text="{Binding PrincipalText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,2" Padding="4,2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PrincipalError}" Foreground="Red" FontSize="11" Margin="0,0,0,6" Visibility="{Binding PrincipalError, Converter={StaticResource StringToVisibility}}"/>
                                    <TextBlock Grid.Row="2" Text="Rate (%)" VerticalAlignment="Center" Margin="0,0,8,6"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RateText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,2" Padding="4,2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding RateError}" Foreground="Red" FontSize="11" Margin="0,0,0,6" Visibility="{Binding RateError, Converter={StaticResource StringToVisibility}}"/>
                                    <TextBlock Grid.Row="4" Text="Term (years)" VerticalAlignment="Center" Margin="0,0,8,6"/>
                                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TermYearsText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,2" Padding="4,2"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding TermYearsError}" Foreground="Red" FontSize="11" Margin="0,0,0,6" Visibility="{Binding TermYearsError, Converter={StaticResource StringToVisibility}}"/>
                                    <TextBlock Grid.Row="6" Text="First payment date" VerticalAlignment="Center" Margin="0,0,8,6" ToolTip="First payment date is the date of payment #1. Each subsequent payment is one month later."/>
                                    <DatePicker Grid.Row="6" Grid.Column="1" SelectedDate="{Binding StartDate}" SelectedDateFormat="Short" Margin="0,0,0,6" Padding="2" MinWidth="100"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Extra Payments card -->
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="6" Padding="14" Margin="0,0,0,16" Background="#fafafa">
                            <StackPanel>
                                <TextBlock Text="Extra payments" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <TextBlock Text="Recurring extra principal (per month)" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding RecurringExtraText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" Padding="4,2"/>
                                <TextBlock Text="{Binding RecurringExtraError}" Foreground="Red" FontSize="11" Margin="0,0,0,6" Visibility="{Binding RecurringExtraError, Converter={StaticResource StringToVisibility}}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Button Content="+$50" Command="{Binding AddRecurringPresetCommand}" CommandParameter="50" Padding="6,4" Margin="0,0,6,0"/>
                                    <Button Content="+$100" Command="{Binding AddRecurringPresetCommand}" CommandParameter="100" Padding="6,4" Margin="0,0,6,0"/>
                                    <Button Content="+$200" Command="{Binding AddRecurringPresetCommand}" CommandParameter="200" Padding="6,4"/>
                                </StackPanel>

                                <TextBlock Text="Quick-add lump sum" Margin="0,0,0,4"/>
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="160"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <DatePicker SelectedDate="{Binding QuickAddDate}" SelectedDateFormat="Short" Padding="2" Margin="0,0,4,0" MinWidth="100"/>
                                    <TextBox Grid.Column="1" Text="{Binding QuickAddAmountText, UpdateSourceTrigger=PropertyChanged}" Padding="4,2" Margin="0,0,4,0"/>
                                    <Button Grid.Column="2" Content="Add" Command="{Binding AddQuickLumpSumCommand}" Padding="8,4"/>
                                </Grid>
                                <TextBlock Text="Lump sums (date + amount)" Margin="0,0,0,4"/>
                                <DataGrid x:Name="LumpSumsGrid" ItemsSource="{Binding LumpSums}" SelectedIndex="{Binding SelectedLumpSumIndex, Mode=TwoWay}"
                                          AutoGenerateColumns="False" Height="100" Margin="0,0,0,6"
                                          CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="Date" Width="*" MinWidth="95">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <DatePicker SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}" SelectedDateFormat="Short" BorderThickness="0" Padding="2,0" MinWidth="95"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Amount" Binding="{Binding AmountText, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Button Content="Add lump sum" Command="{Binding AddLumpSumCommand}" Padding="8,4" Margin="0,0,8,0"/>
                                    <Button Content="Remove selected" Command="{Binding RemoveSelectedLumpSumCommand}" Padding="8,4"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <CheckBox Content="Auto-recalculate when inputs change" IsChecked="{Binding AutoRecalculate}" Margin="0,0,0,8"/>
                        <ui:Button Content="Recalculate" Command="{Binding CalculateCommand}" Padding="14,8" FontSize="14" HorizontalAlignment="Stretch" Appearance="Primary"/>
                        <TextBlock Text="{Binding LastUpdatedText}" FontSize="11" Foreground="Gray" Margin="0,6,0,0" Visibility="{Binding LastUpdatedText, Converter={StaticResource StringToVisibility}}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Right: Summary + Toolbar + Schedule (no outer scroll; DataGrid scrolls) -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Summary row: Base card | Savings banner or hint | With Extras card (when HasExtras) -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="#ccc" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,6,0">
                            <StackPanel>
                                <TextBlock Text="Base schedule" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock><Run Text="Payment: "/><Run Text="{Binding BaseSummary.MonthlyPayment, StringFormat='{}{0:C2}'}"/></TextBlock>
                                <TextBlock><Run Text="Total interest: "/><Run Text="{Binding BaseSummary.TotalInterest, StringFormat='{}{0:C2}'}"/></TextBlock>
                                <TextBlock><Run Text="Payoff: "/><Run Text="{Binding BaseSummary.PayoffDate, StringFormat='yyyy-MM-dd'}"/></TextBlock>
                            </StackPanel>
                        </Border>
                        <!-- Column 1: Savings banner when HasExtras, else single-line hint -->
                        <Border Grid.Column="1" Padding="12,8" Margin="4,0" CornerRadius="4"
                                Visibility="{Binding HasExtras, Converter={StaticResource BoolToVisibility}}"
                                Background="#e8f4ea" BorderBrush="#2e7d32" BorderThickness="1">
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4">
                                    <Run Text="Interest saved: "/><Run Text="{Binding InterestSaved, Mode=OneWay, StringFormat='{}{0:C2}'}"/>
                                </TextBlock>
                                <TextBlock FontSize="11">
                                    <Run Text="Time saved: "/><Run Text="{Binding PaymentsSaved, Mode=OneWay}"/><Run Text=" payments Â· Payoff: "/><Run Text="{Binding NewPayoffDate, Mode=OneWay, StringFormat='yyyy-MM-dd'}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <TextBlock Grid.Column="1" Text="Add extra payments to see savings." FontSize="12" Foreground="Gray" VerticalAlignment="Center" Margin="8,0"
                                   Visibility="{Binding HasExtras, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}"/>
                        <!-- Column 2: With extras card only when HasExtras -->
                        <Border Grid.Column="2" BorderBrush="#ccc" BorderThickness="1" CornerRadius="4" Padding="10" Margin="6,0,0,0"
                                Visibility="{Binding HasExtras, Converter={StaticResource BoolToVisibility}}">
                            <StackPanel>
                                <TextBlock Text="With extras" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock><Run Text="Payment: "/><Run Text="{Binding ExtraSummary.MonthlyPayment, StringFormat='{}{0:C2}'}"/></TextBlock>
                                <TextBlock><Run Text="Total interest: "/><Run Text="{Binding ExtraSummary.TotalInterest, StringFormat='{}{0:C2}'}"/></TextBlock>
                                <TextBlock><Run Text="Payoff: "/><Run Text="{Binding ExtraSummary.PayoffDate, StringFormat='yyyy-MM-dd'}"/></TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Toolbar: View | Jump to # | Export | Show base in table | Cumulative interest | Settings -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="View: " VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <RadioButton Content="Monthly" IsChecked="{Binding IsYearlyView, Converter={StaticResource InverseBool}, Mode=TwoWay}" GroupName="ViewMode" Margin="0,0,8,0"/>
                        <RadioButton Content="Yearly" IsChecked="{Binding IsYearlyView, Mode=TwoWay}" GroupName="ViewMode" Margin="0,0,16,0"/>
                        <TextBlock Text="Jump to payment #" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBox Text="{Binding JumpToPaymentText, UpdateSourceTrigger=PropertyChanged}" Width="70" Padding="6,4" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <Button Content="Go" Command="{Binding JumpToPaymentCommand}" Padding="8,4" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <Menu VerticalAlignment="Center" Margin="0,0,16,0">
                            <MenuItem Header="Export CSV" Padding="8,4">
                                <MenuItem Header="Export current view" Command="{Binding ExportCsvCommand}" CommandParameter="{x:Static vm:ExportScope.Current}"/>
                                <MenuItem Header="Export base schedule" Command="{Binding ExportCsvCommand}" CommandParameter="{x:Static vm:ExportScope.Base}"/>
                                <MenuItem Header="Export with extras" Command="{Binding ExportCsvCommand}" CommandParameter="{x:Static vm:ExportScope.WithExtras}"/>
                            </MenuItem>
                        </Menu>
                        <Button x:Name="SettingsButton" ToolTip="Settings" Margin="0,0,0,0" Padding="8,4" VerticalAlignment="Center" Click="SettingsButton_Click">
                            <Button.Content>
                                <ui:SymbolIcon Symbol="Settings24"/>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <!-- Schedule: tabs when HasExtras, single grid when not -->
                    <TabControl Grid.Row="2" x:Name="ScheduleTabControl" SelectedIndex="{Binding SelectedScheduleTabIndex, Mode=TwoWay}" Visibility="{Binding HasExtras, Converter={StaticResource BoolToVisibility}}">
                        <TabItem Header="Base schedule">
                            <DataGrid x:Name="BaseScheduleGrid" ItemsSource="{Binding BaseDisplayScheduleRows}" AutoGenerateColumns="False"
                                      FrozenColumnCount="2" RowHeight="30"
                                      IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                                      AlternatingRowBackground="#f0f4f8" HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="6,6"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding PaymentNumber}" Width="44" MinWidth="44"/>
                                    <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat='yyyy-MM-dd'}" Width="100" MinWidth="92"/>
                                    <DataGridTextColumn Header="Payment" Binding="{Binding ScheduledPayment, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Interest" Binding="{Binding Interest, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Principal" Binding="{Binding ScheduledPrincipal, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Extra" Binding="{Binding ExtraPrincipal, StringFormat='{}{0:C2}'}" MinWidth="72" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Total Principal" Binding="{Binding TotalPrincipal, StringFormat='{}{0:C2}'}" MinWidth="96" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Balance" Binding="{Binding EndingBalance, StringFormat='{}{0:C2}'}" MinWidth="92" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Cumulative Interest" Binding="{Binding CumulativeInterest, StringFormat='{}{0:C2}'}" MinWidth="110" Width="*" >
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="With extras">
                            <DataGrid x:Name="ExtraScheduleGrid" ItemsSource="{Binding ExtraDisplayScheduleRows}" AutoGenerateColumns="False"
                                      FrozenColumnCount="2" RowHeight="30"
                                      IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                                      AlternatingRowBackground="#f0f4f8" HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="6,6"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding PaymentNumber}" Width="44" MinWidth="44"/>
                                    <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat='yyyy-MM-dd'}" Width="100" MinWidth="92"/>
                                    <DataGridTextColumn Header="Payment" Binding="{Binding ScheduledPayment, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Interest" Binding="{Binding Interest, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Principal" Binding="{Binding ScheduledPrincipal, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Extra" Binding="{Binding ExtraPrincipal, StringFormat='{}{0:C2}'}" MinWidth="72" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Total Principal" Binding="{Binding TotalPrincipal, StringFormat='{}{0:C2}'}" MinWidth="96" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Balance" Binding="{Binding EndingBalance, StringFormat='{}{0:C2}'}" MinWidth="92" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Cumulative Interest" Binding="{Binding CumulativeInterest, StringFormat='{}{0:C2}'}" MinWidth="110" Width="*" >
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                    <DataGrid Grid.Row="2" x:Name="ScheduleGrid" ItemsSource="{Binding BaseDisplayScheduleRows}" AutoGenerateColumns="False"
                              Visibility="{Binding HasExtras, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}"
                              FrozenColumnCount="2" RowHeight="30"
                              IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                              AlternatingRowBackground="#f0f4f8" HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="6,6"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding PaymentNumber}" Width="44" MinWidth="44"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat='yyyy-MM-dd'}" Width="100" MinWidth="92"/>
                            <DataGridTextColumn Header="Payment" Binding="{Binding ScheduledPayment, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Interest" Binding="{Binding Interest, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Principal" Binding="{Binding ScheduledPrincipal, StringFormat='{}{0:C2}'}" MinWidth="88" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Extra" Binding="{Binding ExtraPrincipal, StringFormat='{}{0:C2}'}" MinWidth="72" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total Principal" Binding="{Binding TotalPrincipal, StringFormat='{}{0:C2}'}" MinWidth="96" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Balance" Binding="{Binding EndingBalance, StringFormat='{}{0:C2}'}" MinWidth="92" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Cumulative Interest" Binding="{Binding CumulativeInterest, StringFormat='{}{0:C2}'}" MinWidth="110" Width="*" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock"><Setter Property="HorizontalAlignment" Value="Right"/></Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ContentControl x:Name="ChartHost" Grid.Row="3" Margin="0,8,0,0" MinHeight="60" Visibility="Collapsed"/>
                </Grid>
            </Grid>
        </Border>
        <ui:SnackbarPresenter Grid.Row="2" x:Name="SnackbarPresenter"/>
    </Grid>
</ui:FluentWindow>
