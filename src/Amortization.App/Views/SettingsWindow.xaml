<Window x:Class="Amortization.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="380" Height="320"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource App.Background}">
    <StackPanel Margin="24">
        <TextBlock Text="Settings" FontWeight="Bold" FontSize="18" Margin="0,0,0,16" Foreground="{DynamicResource App.TextPrimary}"/>

        <!-- Theme -->
        <TextBlock Text="Theme" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="{DynamicResource App.TextPrimary}"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <RadioButton Content="Light" Style="{StaticResource AppRadioButtonStyle}" IsChecked="{Binding Theme, Converter={StaticResource AppThemeToBoolConverter}, ConverterParameter=Light, Mode=TwoWay}" GroupName="Theme" Margin="0,0,12,0"/>
            <RadioButton Content="Dark" Style="{StaticResource AppRadioButtonStyle}" IsChecked="{Binding Theme, Converter={StaticResource AppThemeToBoolConverter}, ConverterParameter=Dark, Mode=TwoWay}" GroupName="Theme"/>
        </StackPanel>

        <!-- UI Scale -->
        <TextBlock Text="UI scale" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="{DynamicResource App.TextPrimary}"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <Slider Value="{Binding Zoom, Mode=TwoWay}"
                    Minimum="0.8" Maximum="1.5"
                    TickFrequency="0.05"
                    IsSnapToTickEnabled="True"
                    Width="200"
                    VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ScalePercentText}" Margin="8,0,0,0" VerticalAlignment="Center" Width="50" Foreground="{DynamicResource App.TextPrimary}"/>
        </StackPanel>
        <TextBlock Text="Scales the entire interface proportionally." FontSize="11" Foreground="{DynamicResource App.TextSecondary}" Margin="0,0,0,16"/>

        <!-- Reset -->
        <Button Content="Reset to defaults"
                Command="{Binding ResetToDefaultsCommand}"
                Padding="12,6"
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                Style="{StaticResource ButtonAccentStyle}"/>
    </StackPanel>
</Window>
